%{
    #include <stdio.h>
    #include "task2.tab.h" /* Token values generated by bison */
%}

%option noyywrap stack
%x VARIABLE

TEXT ([^\|;\n\$ \t])|(\\\;)|(\\\|)|(\\\\)|(\\[ ])

%%
\$                 { yy_push_state(VARIABLE); }
<VARIABLE>{TEXT}+  { yy_pop_state(); return TOKVAR; }

\|         { return TOKPIPE; }
\n         { return TOKNL; }
;          { return TOKSEMI; }
[ \t]+     { return TOKSPACE; }
{TEXT}+    { return TOKTEXT; }
%%